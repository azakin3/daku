{block content}



<div id="shop-content">
   {block title}<h1>Košík</h1>{/block}
    <table class="cart-table">
    {foreach $cart as $item}

   <tr><td  class="item-table"> <img src="/images/items/{$item->item_id}.png" width="100"></td>
               <td>
                   <a n:href="Item:default $item->item_id,$item->item_name"> {$item->item_name} </a></td>
               <td> <input type="number" name="quantity" min="1" max="5" value="{$item->pocet}"></td>
               <td> {$item->price}kč</td>
           <td class="remove"><a n:href="Item:remove $item->list_id,$item->item_id">Odstranit</a></td>
           </tr>

    {/foreach}





    </table>
<div id="pay">
   <a n:href="Cart:default"> <input type="submit"  class="button white" value="Aktualizovat"></a>
    <a n:href="Payment: "><input type="submit" class="button" value="Zaplatit"></a>


</div>
    <div class="clear"></div>



</div>




</div>
